# ========================================
# Yoda with Ollama Configuration
# ========================================
# Copy this file to .env before deployment

# ========================================
# Ollama Configuration (REQUIRED)
# ========================================
# For Docker deployment (server): use internal hostname
OLLAMA_BASE_URL=http://ollama:11434

# For local development: use server IP
# OLLAMA_BASE_URL=http://68.183.88.5:11434

OLLAMA_MODEL=alibayram/medgemma:4b
OLLAMA_API_KEY=ollama

# External access to Ollama (for testing/local development):
# Access at: http://68.183.88.5:11434

# ========================================
# Langfuse Configuration (Optional)
# ========================================
LANGFUSE_ENABLED=false
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_HOST=https://cloud.langfuse.com

# ========================================
# MongoDB Configuration (Optional)
# ========================================
MONGODB_URI=mongodb://mongodb:27017/
MONGODB_DB=healthyoda

# ========================================
# CORS Configuration
# ========================================
# Update with your server IP
ALLOWED_ORIGINS=http://68.183.88.5,http://68.183.88.5:8002,http://localhost:8002,http://127.0.0.1:8002

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# ========================================
# Voice Processing (Optional)
# ========================================
VOICE_ENABLED=false
MAX_AUDIO_SIZE=10485760

