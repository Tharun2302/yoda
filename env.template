# ========================================
# HYoda Environment Configuration
# ========================================
# Copy this file to .env and fill in your values

# ========================================
# AI Model Configuration
# ========================================
# OpenAI Configuration (Optional - at least one AI provider required)
OPENAI_API_KEY=your-openai-api-key-here

# Ollama Configuration (Optional - alternative to OpenAI)
# For local AI models via Ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_API_KEY=ollama
OLLAMA_MODEL=alibayram/medgemma:4b

# Default Model Selection
# Choose which model to use by default (will be overridden by UI selection)
# Available options: gpt-4o-mini (OpenAI) or MedGemma (Ollama)
DEFAULT_MODEL=gpt-4o-mini

# ========================================
# Langfuse Configuration (Optional)
# ========================================
# Set LANGFUSE_ENABLED=true to enable Langfuse tracking
LANGFUSE_ENABLED=false
LANGFUSE_PUBLIC_KEY=your-langfuse-public-key
LANGFUSE_SECRET_KEY=your-langfuse-secret-key
LANGFUSE_HOST=https://cloud.langfuse.com

# ========================================
# MongoDB Configuration (Optional)
# ========================================
# MongoDB URI for session storage
MONGODB_URI=mongodb://mongodb:27017/
MONGODB_DB=healthyoda

# ========================================
# HealthBench Evaluation Models
# ========================================
# Models used for evaluating chatbot responses
# Limited to available models: gpt-4o-mini or MedGemma
HEALTHBENCH_GRADER_MODEL=gpt-4o-mini
HELM_JUDGE_MODEL=alibayram/medgemma:4b

# ========================================
# CORS Configuration
# ========================================
# Update with your server IP and domains
ALLOWED_ORIGINS=https://68.183.88.5,http://68.183.88.5:8002,http://localhost:8002,http://127.0.0.1:8002

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# ========================================
# Voice Processing (Optional)
# ========================================
VOICE_ENABLED=false
MAX_AUDIO_SIZE=10485760

# ========================================
# Vector Store
# ========================================
# Set to true to rebuild vector store on startup
REBUILD_VECTORSTORE=false

# ========================================
# Vector Store Management
# ========================================
# API endpoints available for vector store management:
# GET  /rag/status   - Get current RAG system status
# POST /rag/rebuild  - Force rebuild vector store (use when models change)

# Model to use specifically for vector store rebuilds (independent of UI model selection)
# Should be a model that supports embeddings (currently only OpenAI models)
RAG_REBUILD_MODEL=text-embedding-3-small

