# ========================================
# HYoda Environment Configuration
# ========================================
# Copy this file to .env and fill in your values

# ========================================
# OpenAI Configuration (REQUIRED)
# ========================================
OPENAI_API_KEY=your-openai-api-key-here

# ========================================
# Langfuse Configuration (Optional)
# ========================================
# Set LANGFUSE_ENABLED=true to enable Langfuse tracking
LANGFUSE_ENABLED=false
LANGFUSE_PUBLIC_KEY=your-langfuse-public-key
LANGFUSE_SECRET_KEY=your-langfuse-secret-key
LANGFUSE_HOST=https://cloud.langfuse.com

# ========================================
# MongoDB Configuration (Optional)
# ========================================
# MongoDB URI for session storage
MONGODB_URI=mongodb://mongodb:27017/
MONGODB_DB=healthyoda

# ========================================
# HealthBench Evaluation Models
# ========================================
HEALTHBENCH_GRADER_MODEL=gpt-4o-mini
HELM_JUDGE_MODEL=gpt-4o-mini

# ========================================
# CORS Configuration
# ========================================
# Update with your server IP and domains
ALLOWED_ORIGINS=http://167.71.238.114:8002,http://localhost:8002,http://127.0.0.1:8002

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# ========================================
# Voice Processing (Optional)
# ========================================
VOICE_ENABLED=false
MAX_AUDIO_SIZE=10485760

# ========================================
# Vector Store
# ========================================
# Set to true to rebuild vector store on startup
REBUILD_VECTORSTORE=false

